# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# For AWS RDS, use the RDS endpoint as DB_HOST
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alliswell
DB_USER=postgres
DB_PASSWORD=postgres

# Database Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Database SSL Settings (set to true for production/AWS RDS)
# Set DB_SSL_REJECT_UNAUTHORIZED=false only if using self-signed certificates
DB_SSL_REJECT_UNAUTHORIZED=true

# JWT Configuration
# IMPORTANT: Generate a strong secret for production using: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS and redirects)
# For production, set this to your frontend domain (e.g., https://yourdomain.com)
FRONTEND_URL=http://localhost:3000

# Microsoft Azure AD Configuration (Optional - for SSO)
# Get these values from Azure Portal after creating an App Registration
# See MICROSOFT_SSO_SETUP.md for detailed setup instructions
AZURE_AD_CLIENT_ID=your-application-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret-value
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_REDIRECT_URI=http://localhost:3001/api/auth/microsoft/callback
